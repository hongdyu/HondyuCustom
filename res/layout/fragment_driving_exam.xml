<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="我的设备:" />

    <Button
        android:id="@+id/btn_show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试dialog" />
    
    <Button
        android:id="@+id/btn_operate_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SQLite操作" />
    
    <Button
        android:id="@+id/btn_slide_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="滑动进度条控制" />

    <Button
        android:id="@+id/btn_location_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定位当前城市" />

    <Button
        android:id="@+id/btn_play_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频播放" />

    <Button
        android:id="@+id/btn_slidebar_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="slide对话框" />

</LinearLayout>